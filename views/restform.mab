methods = %w( get post put delete )
n = ( methods.index( @m ) + 1 ) % methods.length

h1 @m
h3 "next is... #{methods[ n ]}"
form :method => ( n < 2 ) ? methods[ n ] : methods[ 1 ] do
	input(
		:type => 'hidden',
		:name => '_method',
		:value => methods[ n ]
	) if ( n >= 2 )
	input :type => 'submit'
end